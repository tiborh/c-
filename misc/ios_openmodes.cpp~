using namespace std;

void openmode_int()
{
  cout << "ios::in: " << ios::in << endl;
  cout << "ios::out: " << ios::out << endl;
  cout << "ios::app: " << ios::app << endl;
  cout << "ios::trunc: " << ios::trunc << endl;
  cout << "ios::ate: " << ios::ate << endl;
  cout << "ios::binary: " << ios::binary << endl;
}

int main()
{
  openmode_int();

  return 0;
}
